@prefix dash: <http://datashapes.org/dash#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix schema: <http://schema.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

schema:DDOShape
    sh:targetClass schema:DDO ;
    sh:property [
        sh:path schema:id ;
        sh:datatype xsd:string ;
        sh:pattern "^did\\:op\\:(.*)$" ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path schema:version ;
        sh:datatype xsd:string ;
        sh:pattern "^(.*)$" ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path schema:chainId;
        sh:datatype xsd:integer ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path schema:metadata ;
        sh:node schema:MetadataShape ;
        sh:minCount 1;
        sh:maxCount 1;
    ] ; .
    # TODO: services, credentials

schema:MetadataShape
    sh:targetClass schema:Metadata ;
    # TODO: add created, updated
    sh:property [
        sh:path schema:description ;
        sh:datatype xsd:string ;
        sh:pattern "^(.|\\s)*$" ;
        sh:minCount 1;
        sh:maxCount 1;
    ] ;
    sh:property [
        sh:path schema:copyrightHolder;
        sh:datatype xsd:string ;
        sh:pattern "^(.|\\s)*$" ;
    ] ;
    sh:property [
        sh:path schema:name ;
        sh:datatype xsd:string ;
        sh:pattern "^(.|\\s)*$" ;
        sh:minCount 1;
        sh:maxCount 1;
    ] ;
    sh:property [
        sh:path schema:type;
        sh:datatype xsd:string ;
        sh:pattern "^(.|\\s)*$" ;
        sh:minCount 1;
        sh:maxCount 1;
    ] ;
    sh:property [
        sh:path schema:author;
        sh:datatype xsd:string ;
        sh:pattern "^(.|\\s)*$" ;
        sh:minCount 1;
        sh:maxCount 1;
    ] ;
    sh:property [
        sh:path schema:license;
        sh:datatype xsd:string ;
        sh:pattern "^(.|\\s)*$" ;
        sh:minCount 1;
        sh:maxCount 1;
    ] ;
    # TODO: links, tags, categories as arrays of strings
    sh:property [
        sh:path schema:contentLanguage;
        sh:datatype xsd:string ;
        sh:pattern "^(.|\\s)*$" ;
    ] ;
    sh:property [
        sh:path schema:additionalInformation;
    ] ;
    sh:property [
        sh:path schema:algorithm;
        sh:node schema:AlgorithmShape ;
    ] ;.


schema:AlgorithmShape
    sh:targetClass schema:Algorithm ;
    sh:property [
        sh:path schema:version ;
        sh:datatype xsd:string ;
        sh:pattern "^(.*)$" ;
    ] ;
    sh:property [
        sh:path schema:language ;
        sh:datatype xsd:string ;
        sh:pattern "^(.*)$" ;
    ] ;
    sh:property [
        sh:path schema:container ;
        sh:node schema:ContainerShape ;
        sh:minCount 1;
        sh:maxCount 1;
    ] ;.


schema:ContainerShape
    sh:targetClass schema:Container ;
    sh:property [
        sh:path schema:entrypoint ;
        sh:datatype xsd:string ;
        sh:pattern "^(.*)$" ;
        sh:minCount 1;
        sh:maxCount 1;
    ] ;
    sh:property [
        sh:path schema:image ;
        sh:datatype xsd:string ;
        sh:pattern "^(.*)$" ;
        sh:minCount 1;
        sh:maxCount 1;
    ] ;
    sh:property [
        sh:path schema:tag ;
        sh:datatype xsd:string ;
        sh:pattern "^(.*)$" ;
        sh:minCount 1;
        sh:maxCount 1;
    ] ;
    sh:property [
        sh:path schema:checksum ;
        sh:datatype xsd:string ;
        sh:pattern "^(.*)$" ;
        sh:minCount 1;
        sh:maxCount 1;
    ] ;.
