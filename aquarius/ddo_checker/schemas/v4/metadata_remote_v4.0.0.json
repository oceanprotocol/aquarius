{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "The Root Schema",
  "required": [
    "@context", "id", "created", "updated"
  ],
  "properties": {
    "@context": {
      "$id": "#/properties/@context",
      "type": "array"
    },
    "id": {
      "$id": "#/properties/id",
      "type": "string",
      "pattern": "^did\\:op\\:(.*)$"
    },
    "created": {
      "$id": "#/properties/created",
      "examples": ["2012-02-01T10:55:11Z"],
      "type": "string",
      "pattern": "^(.*)$"
    },
    "updated": {
      "$id": "#/properties/updated",
      "examples": ["2012-02-01T10:55:11Z"],
      "type": "string",
      "pattern": "^(.*)$"
    },
    "version": {
      "$id": "#/properties/version",
      "examples": ["v4.0.0"],
      "type": "string",
      "pattern": "^(.*)$"
    },
    "chainId": {
      "$id": "#/properties/chainId",
      "examples": ["1331", "12"],
      "type": "integer"
    },
    "proof": {
      "$id": "#/properties/proof",
      "type": "object",
      "default": null
    },
    "metadata": {
      "$id": "#/properties/metadata",
      "type": "object",
      "default": null,
      "additionalProperties": false,
      "required": [
        "description",
        "name",
        "type",
        "author",
        "license"
      ],
      "properties": {
        "description": {
          "$id": "#/properties/metadata/properties/description",
          "type": "string",
          "title": "The Description Schema",
          "default": "",
          "examples": ["EXAMPLE ONLY"],
          "pattern": "^(.|\\s)*$"
        },
        "copyrightHolder": {
          "$id": "#/properties/metadata/properties/copyrightHolder",
          "type": "string",
          "default": "",
          "pattern": "^(.*)$"
        },
        "name": {
          "$id": "#/properties/metadata/properties/name",
          "type": "string",
          "examples": ["10 Monkey Species Small"],
          "pattern": "^(.*)$"
        },
        "type": {
          "$id": "#/properties/metadata/properties/type",
          "type": "string",
          "examples": ["dataset", "algorithm"],
          "pattern": "^(.*)$"
        },
        "author": {
          "$id": "#/properties/metadata/properties/author",
          "type": "string",
          "default": "",
          "examples": ["Mario"],
          "pattern": "^(.*)$"
        },
        "license": {
          "$id": "#/properties/metadata/properties/license",
          "type": "string",
          "examples": ["CC0: Public Domain"],
          "pattern": "^(.*)$"
        },
        "links": {
          "$id": "#/properties/metadata/properties/links",
          "type": "array",
          "default": null,
          "items": {
            "$id": "#/properties/metadata/properties/links/items",
            "type": "string",
            "examples": ["https://drive.google.com/open?id=1uuz50RGiAW8YxRcWeQVgQglZpyAebgSM"],
            "pattern": "^(.*)$"
          }
        },
        "contentLanguage": {
          "$id": "#/properties/metadata/properties/contentLanguage",
          "type": "string",
          "examples": ["de-DE", "en-US"],
          "pattern": "^(.*)$"
        },
        "tags": {
          "$id": "#/properties/metadata/properties/tags",
          "type": "array",
          "default": null,
          "items": {
            "$id": "#/properties/metadata/properties/tags/items",
            "type": "string",
            "default": "",
            "examples": ["image data", "classification", "animals"],
            "pattern": "^(.*)$"
          }
        },
        "categories": {
          "$id": "#/properties/metadata/properties/categories",
          "type": "array",
          "default": null,
          "items": {
            "$id": "#/properties/metadata/properties/categories/items",
            "type": "string",
            "default": "",
            "examples": ["image data", "classification", "animals"],
            "pattern": "^(.*)$"
          }
        },
        "additionalInformation": {
          "$id": "#/properties/metadata/properties/additionalInformation",
          "type": "object",
          "default": null
        },
        "algorithm": {
          "$id": "#/properties/metadata/properties/algorithm",
          "type": "object",
          "required": ["container"],
          "properties": {
            "language": {
              "$id": "#/properties/metadata/properties/algorithm/properties/language",
              "type": "string"
            },
            "version": {
              "$id": "#/properties/metadata/properties/algorithm/properties/version",
              "type": "string"
            },
            "container": {
              "$id": "#/properties/metadata/properties/algorithm/properties/container",
              "type": "object",
              "title": "Object describing the Docker container image",
              "required": ["entrypoint", "image", "tag", "checksum"],
              "properties": {
                "entrypoint": {
                  "$id": "#/properties/metadata/properties/algorithm/properties/container/properties/entrypoint",
                  "type": "string",
                  "pattern": "^(.*)$",
                  "title": "The command to execute, or script to run inside the Docker image"
                },
                "image": {
                  "$id": "#/properties/metadata/properties/algorithm/properties/container/properties/image",
                  "type": "string",
                  "pattern": "^(.*)$",
                  "title": "Name of the Docker image"
                },
                "tag": {
                  "$id": "#/properties/metadata/properties/algorithm/properties/container/properties/tag",
                  "pattern": "^(.*)$",
                  "type": "string"
                },
                "checksum": {
                  "$id": "#/properties/metadata/properties/algorithm/properties/container/properties/checksum",
                  "pattern": "^(.*)$",
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "services": {
      "$id": "#/properties/services",
      "type": "array",
      "items": {
        "$id": "#/properties/services/items",
        "additionalProperties": false,
        "required": ["type", "datatokenAddress", "providerEndpoint", "timeout"],
        "properties": {
          "type": {
            "$id": "#/properties/services/properties/items/type",
            "type": "string",
            "pattern": "^(.*)$"
          },
          "name": {
            "$id": "#/properties/services/properties/items/name",
            "type": "string",
            "pattern": "^(.*)$"
          },
          "description": {
            "$id": "#/properties/services/properties/items/description",
            "type": "string",
            "pattern": "^(.*)$"
          },
          "datatokenAddress": {
            "$id": "#/properties/services/properties/items/datatokenAddress",
            "type": "string",
            "pattern": "^(.*)$"
          },
          "providerEndpoint": {
            "$id": "#/properties/services/properties/items/providerEndpoint",
            "type": "string",
            "pattern": "^(.*)$"
          },
          "timeout": {
            "$id": "#/properties/services/properties/items/timeout",
            "type": "integer"
          },
          "files": {
            "$id": "/properties/services/properties/items/files",
            "type": "object",
            "additionalProperties": false,
            "required": ["files", "encryptedFiles"],
            "properties": {
              "files": {
                "$id": "#/properties/services/properties/items/files/properties/files",
                "type": "array",
                "default": null,
                "items": {
                  "$id": "#/properties/services/properties/items/files/properties/files/properties/items",
                  "type": "object",
                  "default": null,
                  "additionalProperties": false,
                  "required": ["contentType"],
                  "properties": {
                    "contentType": {
                      "$id": "#/properties/services/properties/items/files/properties/files/properties/contentType",
                      "type": "string",
                      "examples": ["application/zip"],
                      "pattern": "^(.*)$"
                    },
                    "name": {
                      "$id": "#/properties/services/properties/items/files/properties/files/properties/name",
                      "type": "string",
                      "default": "",
                      "examples": ["monkey_species.csv"],
                      "pattern": "^(.*)$"
                    },
                    "checksum": {
                      "$id": "#/properties/services/properties/items/files/properties/files/properties/checksum",
                      "type": "string",
                      "default": "",
                      "examples": ["2bf9d229d110d1976cdf85e9f3256c7f"],
                      "pattern": "^(.*)$"
                    },
                    "checksumType": {
                      "$id": "#/properties/services/properties/items/files/properties/files/properties/checksumType",
                      "type": "string",
                      "default": "",
                      "examples": ["MD5"],
                      "pattern": "^(.*)$"
                    },
                    "contentLength": {
                      "$id": "#/properties/services/properties/items/files/properties/files/properties/contentLength",
                      "type": "string",
                      "default": "0",
                      "examples": ["12057507"]
                    },
                    "encoding": {
                      "$id": "#/properties/services/properties/items/files/properties/files/properties/encoding",
                      "type": "string",
                      "default": "",
                      "examples": ["UTF-8"],
                      "pattern": "^(.*)$"
                    },
                    "compression": {
                      "$id": "#/properties/services/properties/items/files/properties/files/properties/compression",
                      "type": "string",
                      "default": "",
                      "examples": ["zip"],
                      "pattern": "^(.*)$"
                    },
                    "encrypted": {
                      "$id": "#/properties/services/properties/items/files/properties/files/properties/encrypted",
                      "type": "boolean",
                      "default": false,
                      "examples": [true, false]
                    },
                    "encryptionMode": {
                      "$id": "#/properties/services/properties/items/files/properties/files/properties/encryptionMode",
                      "type": "string",
                      "pattern": "^(.*)$",
                      "default": "",
                      "examples": ["CBC"]
                    },
                    "resourceId": {
                      "$id": "#/properties/services/properties/items/files/properties/files/properties/resourceId",
                      "type": "string",
                      "pattern": "^(.*)$",
                      "default": "0",
                      "examples": ["bucket:47550"]
                    },
                    "attributes": {
                      "$id": "#/properties/services/properties/items/files/properties/files/properties/attributes",
                      "type": "array",
                      "default": []
                    }
                  }
                }
              },
              "encryptedFiles": {
                "$id": "#/properties/services/properties/items/files/properties/encryptedFiles",
                "type": "string",
                "pattern": "^(.*)$",
                "default": "",
                "examples": [
                  "0x234ab87234acbd095430853424ab87234acbd09543085340abffh21983ddhiiee9821438274234210abffh21983ddhiiee982143827423421"
                ],
                "pattern": "^(.*)$"
              }
            }
          },
          "privacy": {
            "$id": "#/properties/services/properties/items/privacy",
            "type": "object",
            "default": null,
            "required": ["allowRawAlgorithm", "allowNetworkAccess", "publisherTrustedAlgorithmPublishers", "publisherTrustedAlgorithms"],
            "properties": {
              "allowRawAlgorithm": {
                "$id": "#/properties/services/properties/items/privacy/properties/allowRawAlgorithm",
                "type": "boolean",
                "examples": [true, false]
              },
              "allowNetworkAccess": {
                "$id": "#/properties/services/properties/items/privacy/properties/allowNetworkAccess",
                "type": "boolean",
                "default": false,
                "examples": [true, false]
              },
              "publisherTrustedAlgorithmPublishers": {
                "$id": "#/properties/services/properties/items/privacy/properties/publisherTrustedAlgorithmPublishers",
                "type": "array",
                "items": {
                  "$id": "#/properties/services/properties/items/privacy/properties/publisherTrustedAlgorithmPublishers/items",
                  "type": "string",
                  "pattern": "^(.*)$"
                }
              },
              "publisherTrustedAlgorithms": {
                "$id": "#/properties/services/properties/items/privacy/properties/publisherTrustedAlgorithms",
                "type": "array",
                "items": {
                  "$id": "#/properties/services/properties/items/privacy/properties/publisherTrustedAlgorithms/items",
                  "type": "object",
                  "required": ["did", "filesChecksum", "containerSectionChecksum"],
                  "properties": {
                    "did": {
                      "$id": "#/properties/services/properties/items/privacy/properties/publisherTrustedAlgorithms/properties/did",
                      "type": "string"
                    },
                    "filesChecksum": {
                      "$id": "#/properties/services/properties/items/privacy/properties/publisherTrustedAlgorithms/properties/filesChecksum",
                      "type": "string"
                    },
                    "containerSectionChecksum": {
                      "$id": "#/properties/services/properties/items/privacy/properties/publisherTrustedAlgorithms/properties/containerSectionChecksum",
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "credentials": {
      "default": null,
      "properties": {
        "allow": {
          "$id": "#/properties/credentials/properties/allow",
          "type": "array",
          "default": null,
          "additionalProperties": false,
          "items": {
            "$id": "#/properties/credentials/properties/allow/items",
            "additionalProperties": false,
            "required": ["type", "values"],
            "properties": {
              "type": {
                "$id": "#/properties/credentials/properties/allow/items/type",
                "type": "string",
                "pattern": "^(.*)$"
              },
              "values": {
                "$id": "#/properties/credentials/properties/allow/items/values",
                "type": "array"
              }
            }
          }
        },
        "deny": {
          "$id": "#/properties/credentials/properties/deny",
          "type": "array",
          "default": null,
          "additionalProperties": false,
          "items": {
            "$id": "#/properties/credentials/properties/deny/items",
            "additionalProperties": false,
            "required": ["type", "values"],
            "properties": {
              "type": {
                "$id": "#/properties/credentials/properties/deny/items/type",
                "type": "string",
                "pattern": "^(.*)$"
              },
              "values": {
                "$id": "#/properties/credentials/properties/deny/items/values",
                "type": "array"
              }
            }
          }
        }
      }
    },
    "status": {
      "$id": "#/properties/status",
      "type": "object",
      "default": null,
      "additionalProperties": false,
      "properties": {
        "isListed": {
          "$id": "#/properties/status/properties/isListed",
          "type": "boolean",
          "default": true,
          "examples": [true, false]
        },
        "isRetired": {
          "$id": "#/properties/status/properties/isRetired",
          "type": "boolean",
          "default": false,
          "examples": [true, false]
        },
        "isOrderDisabled": {
          "$id": "#/properties/status/properties/isOrderDisabled",
          "type": "boolean",
          "default": false,
          "examples": [true, false]
        }
      }
    }
  }
}
